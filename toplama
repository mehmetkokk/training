        <form name="toplam">
            <label>1. Sayı : </label>
            <input type="text" id="Number1"><br><br>
            <label>2. Sayı : </label>
            <input type="text" id="Number2"><br><br>
            <input type="button" id="btnTotal" value="TOPLA">
        </form>
        <br>
        <div id="kutuToplam"></div>
        
        <script>
            let btn=document.getElementById("btnTotal");
            btn.onclick=function(){
                const  n1=Number(document.getElementById("Number1").value);
                const  n2=Number(document.getElementById("Number2").value);
                const  toplam=n1+n2;
                document.getElementById("kutuToplam").innerHTML=" "+toplam;
            }
        </script>
